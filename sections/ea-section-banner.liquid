{% comment %} ATTENTION!!! This is compiled version of ea-section-banner.liquid and it is overriding automatically. You should use theme development tool and sources\sections\ea-section-banner.liquid file to code and save your changes. {% endcomment %}{% assign set = section.settings %}

{% render 'ea-section-styles' %}

<div class="hero-container" id="section-banner">
  <div id="section-{{ section.id }}" class="hero">
      <div class="hero__container container section-banner_main">
          <div class="hero__info-wrap">
              <div class="hero__info--{{ section.id }}  hero__info {{ section.settings.content_position }} mobile_{{ section.settings.content_position_mobile }} banner-title_unset text_align_{{ section.settings.text_align }} mobile_text_align_{{ section.settings.text_align_mobile }} ">
                {% assign title = section.settings.title %}
                {% assign subtitle = section.settings.desc %}

                {% if title != blank %}   
                    <h1 class="hero__title title m-heavy not-animated section-banner_title" style="color: {{ section.settings.text_color }}">{{ title }}</h1>
                {% endif %}

                {% if subtitle != blank %}
                    <div class="not-animated {% if set.subtitle_large %}h3{% endif %} section-banner_descriptoin" style="color: {{ section.settings.text_color }}">{{ subtitle }}</div>
                {% endif %}

                <div class="section-banner_shop"><a onclick="dataLayer.push({'CTA': '{{ set.url }}'});" href="{{ set.url }}">{{ set.button }}</a></div>
              </div>

              <style>
                .hero__info--{{ section.id }} .section-banner_shop a {
                  background: {{ section.settings.btn_bg }};
                  color: {{ section.settings.btn_text }};
                }
                .hero__info--{{ section.id }} .section-banner_shop a:hover {
                  background: {{ section.settings.btn_bg_hover }};
                  color: {{ section.settings.btn_text_hover }};
                }
              </style>

          </div>   
          {% assign image = section.settings.image %}
          {% assign sp_image = section.settings.sp_image %}
          <div class="hero__img hide--mobile">
            {% render 'rimage', image: image, size: '2000x' %}
          </div>
          {% if sp_image != blank %}
            <div class="hero__img hide--desktop">
              {% render 'rimage', image: sp_image, size: '800x' %}
            </div>
          {%endif%}
      </div> 
  </div> 
</div>

