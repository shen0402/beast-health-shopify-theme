{% comment %} ATTENTION!!! This is compiled version of ea-autoscroll-logo.liquid and it is overriding automatically. You should use theme development tool and sources\sections\ea-autoscroll-logo.liquid file to code and save your changes. {% endcomment %}{% if section.settings.visible %}
    {% render 'ea-autoscroll-content', section: section %}
{% endif %}

{% schema %}
  {
    "name": "Autoscroll Logo list",
    "tag": "section",
    "class": "section autoscroll",
    "settings": [
      {
        "type": "checkbox",
        "id": "visible",
        "label": "Show section",
        "default": true
      },
      {
        "type": "header",
        "content": "Spacing"
      },
      {
        "type": "range",
        "id": "ptop",
        "label": "Top spacing desktop",
        "min": 0,
        "unit": "px",
        "max": 500,
        "step": 5,
        "default": 45
      },
      {
        "type": "range",
        "id": "pbottom",
        "label": "Bottom spacing desktop",
        "min": 0,
        "unit": "px",
        "max": 500,
        "step": 5,
        "default": 45
      },
      {
        "type": "range",
        "id": "ptop_mob",
        "label": "Top spacing mobile",
        "min": 0,
        "unit": "px",
        "max": 500,
        "step": 5,
        "default": 45
      },
      {
        "type": "range",
        "id": "pbottom_mob",
        "label": "Bottom spacing mobile",
        "min": 0,
        "unit": "px",
        "max": 500,
        "step": 5,
        "default": 45
      },
  
      {
        "type": "header",
        "content": "Background"
      },
      {
        "type": "color",
        "id": "sectionbg",
        "label": "Section background color",
        "default": "#ffffff"
      }
    ],
    "blocks": [
      {
        "type": "logo",
        "name": "Logo",
        "settings": [
          {
            "id": "img",
            "type": "image_picker",
            "label": "Logo image"
          },
          {
            "id": "svg_logo",
            "type": "html",
            "label": "Logo svg"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Autoscroll list",
        "category": "Autoscroll",
        "blocks": [
          {
            "type": "logo"
          },
          {
            "type": "logo"
          }
        ]
      }
    ]
  }
{% endschema %}