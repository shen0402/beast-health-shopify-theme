  {% for block in section.blocks %}
      {% assign color_name = block.settings.title | replace: ' ', '-' | downcase %}
      [data-color-name="{{ color_name }}"], [data-color-name="{{ color_name }}"] > div {
          background-color: {{ block.settings.color }} !important;
