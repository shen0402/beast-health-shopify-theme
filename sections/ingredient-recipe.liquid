{% render 'ea-section-styles', section: section %}

{% assign meta_info = shop.metafields.ingredient %}

<div class="section_container">
  {%- comment -%}
  <div class="hero-container">
    <div id="section-{{ section.id }}" class="hero">
        <div class="hero__container container">
            <div class="hero__info-wrap">
                <div class="hero__info {{ section.settings.content_position }} text-align-{{ section.settings.text_align }} mobile_{{ section.settings.content_position_mobile }} mob-text-align-{{ section.settings.mob_text_align }}">
                    {% assign title = section.settings.title %}
                    {% assign subtitle = section.settings.text %}
                    {% assign mob_subtitle = section.settings.mob_text %}

                    {% if title != blank %}   
                        <h1 class="hero__title title m-heavy not-animated" style="color: {{ section.settings.text_color }}">{{ title }}</h1>
                    {% endif %}

                    {% if subtitle != blank %}
                        <div class="subtitle hide--mobile not-animated {% if set.subtitle_large %}h3{% endif %}" style="color: {{ section.settings.text_color }}">{{ subtitle }}</div>
                    {% endif %}

                    {% if mob_subtitle != blank %}
                        <div class="subtitle hide--desktop not-animated {% if set.subtitle_large %}h3{% endif %}" style="color: {{ section.settings.text_color }}">{{ mob_subtitle }}</div>
                    {% endif %}

                </div>
            </div>   
            {% assign image = section.settings.image %}
            {% assign mob_image = section.settings.mob_image | default: image %}
            <div class="hero__img hide--mobile">
              {% render 'rimage', image: image, size: '2000x' %}
            </div>
            <div class="hero__img hide--desktop">
              {% render 'rimage', image: mob_image, size: '800x' %}
            </div>
        </div> 
    </div> 
  </div>
  {%- endcomment -%}

  <div class="blog_wrapper container">
    <div class="blog_hero_wrapper d-flex">
      {% for block in section.blocks %}
        {% assign blog = blogs[block.settings.blog] %}
        {% assign handle = blog.title %}        
        <div class="blog_hero {% if forloop.first == true %} active {% endif %}" data-type="{{ handle | replace: ' ', '-' }}">
          <div class="hero--info-wrap" {% if section.settings.bg_color %}style="background: {{section.settings.bg_color}}"{% endif %}>
            <div class="hero__info {{ section.settings.content_position }} text-align-{{ section.settings.text_align }} mobile_{{ section.settings.content_position_mobile }} mob-text-align-{{ section.settings.mob_text_align }}">
              {% assign title = block.settings.title %}
              {% assign subtitle = block.settings.sub_title %}

              {% if title != blank %}   
                  <h1 class="hero__title title m-heavy not-animated" style="color: {{ section.settings.text_color }}">{{ title }}</h1>
              {% endif %}

              {% if subtitle != blank %}
                  <div class="subtitle hide--mobile not-animated {% if set.subtitle_large %}h3{% endif %}" style="color: {{ section.settings.text_color }}">{{ subtitle }}</div>
              {% endif %}

              <div class="recipes-search-wrapper hide--mobile">
                <input type="text" class="recipes-search" placeholder="Search our recipes">
                <svg xmlns="http://www.w3.org/2000/svg" width="20.556" height="20.556" viewBox="0 0 20.556 20.556">
                  <defs>
                    <style>
                      #np_search_1594154_000000 {
                        fill: #0c0404;
                      }
                    </style>
                  </defs>
                  <path id="np_search_1594154_000000"  d="M52.388,51.581a.571.571,0,0,1-.807.807l-6.15-6.15a.325.325,0,0,0-.424-.022s-.094.08-.259.2a7.992,7.992,0,1,1,1.738-1.762c-.143.2-.27.348-.27.348a.323.323,0,0,0,.022.426ZM39.994,46.846a6.852,6.852,0,1,0-6.852-6.852A6.851,6.851,0,0,0,39.994,46.846Z" transform="translate(-31.999 -32)"/>
                </svg>
              </div>
  
              <div class="recipe-blog-switcher hide--desktop">
                <label class="switcher-label">Here for?</label>
                <div class="recipe-blog-switcher_buttons">
                  <div class="recipe-blog-switcher_button active" data-target="recipes">
                    Recipes
                  </div>
                  <div class="recipe-blog-switcher_button" data-target="news">
                    News
                  </div>
                </div>
              </div>
            </div>
          </div>
          {% assign image = block.settings.hero_image %}
          {% assign mob_image = block.settings.hero_mob_image | default: image %}
          {% if image != blank %}
            <div class="hero--img hide--mobile">
              {% render 'rimage', image: image, size: '2000x' %}
            </div>
          {% endif %}          
        </div>
      {% endfor %}
      
      <div class="blog_hero" data-type="all">
        <div class="hero--info-wrap" {% if section.settings.bg_color %}style="background: {{section.settings.bg_color}}"{% endif %}>
          <div class="hero__info {{ section.settings.content_position }} text-align-{{ section.settings.text_align }} mobile_{{ section.settings.content_position_mobile }} mob-text-align-{{ section.settings.mob_text_align }}">
            {% assign title = meta_info.title[0] %}
            {% assign subtitle = meta_info.subtitle[0] %}

            {% if title != blank %}   
                <h1 class="hero__title title m-heavy not-animated" style="color: {{ section.settings.text_color }}">{{ title }}</h1>
            {% endif %}

            {% if subtitle != blank %}
                <div class="subtitle hide--mobile not-animated {% if set.subtitle_large %}h3{% endif %}" style="color: {{ section.settings.text_color }}">{{ subtitle }}</div>
            {% endif %}

            <div class="recipes-search-wrapper hide--mobile">
              <input type="text" class="recipes-search" placeholder="Search our recipes">
              <svg xmlns="http://www.w3.org/2000/svg" width="20.556" height="20.556" viewBox="0 0 20.556 20.556">
                <defs>
                  <style>
                    #np_search_1594154_000000 {
                      fill: #0c0404;
                    }
                  </style>
                </defs>
                <path id="np_search_1594154_000000"  d="M52.388,51.581a.571.571,0,0,1-.807.807l-6.15-6.15a.325.325,0,0,0-.424-.022s-.094.08-.259.2a7.992,7.992,0,1,1,1.738-1.762c-.143.2-.27.348-.27.348a.323.323,0,0,0,.022.426ZM39.994,46.846a6.852,6.852,0,1,0-6.852-6.852A6.851,6.851,0,0,0,39.994,46.846Z" transform="translate(-31.999 -32)"/>
              </svg>
            </div>

            <div class="recipe-blog-switcher hide--desktop">
              <label class="switcher-label">Here for?</label>
              <div class="recipe-blog-switcher_buttons">
                <div class="recipe-blog-switcher_button active" data-target="recipes">
                  Recipes
                </div>
                <div class="recipe-blog-switcher_button" data-target="news">
                  News
                </div>
              </div>
            </div>

          </div>
        </div>   
        {% assign image = meta_info.hero_image[0] %}
        {% assign mob_image = meta_info.hero_mob_image[0] | default: image %}
        {% if image != blank %}
          <div class="hero--img hide--mobile">
            <img src="{{ image }}" width="800px">
          </div>
        {% endif %}
      </div>
    </div> 
    <div class="hide--desktop blog_header-swipe">
      <div class="swipe-text">swipe left to see more.</div>
    </div>
    <div class="blog_header">
      {% assign header_count = section.blocks.size %}
      {% assign categories = '' %}
      {% for category in meta_info.category %}
        {% unless categories contains category %}
          {% assign categories = categories | append: '--' | append: category %}
          {% assign header_count = header_count | plus: 1 %}
        {% endunless %}
      {% endfor %}      

      <div class="header_wrapper {% if header_count < 7 %}d-flex{% endif %}" {% if header_count > 6 %}data-header-slider{% endif %} data-mob-header-slider>
        {% for block in section.blocks %}
          {% assign blog = blogs[block.settings.blog] %}
          {% assign title = block.settings.blog_title | default: blog.title %}
          {% unless block.settings.blog_title == 'News' %}
            <div class="blog_header_item {% if forloop.first == true %}blog_header_item--first active {% endif %}" data-type="{{ blog.title | replace: ' ', '-' }}">{{ title }}</div>
          {% endunless %}          
        {% endfor %}
        <div class="blog_header_item" data-type="all" data-category="all">Ingredients</div>
        {% for block in section.blocks %}
          {% assign blog = blogs[block.settings.blog] %}
          {% assign title = block.settings.blog_title | default: blog.title %}
          {% if block.settings.blog_title == 'News' %}
            <div class="blog_header_item blog_header_item--news hide--mobile {% if forloop.first == true %} active {% endif %}" data-type="{{ blog.title | replace: ' ', '-' }}">{{ title }}</div>
          {% endif %}          
        {% endfor %}
      </div>
    </div>
    <div class="blog_desc_wrap d-flex">
      {% for block in section.blocks %}
        {% assign blog = blogs[block.settings.blog] %}
        {% assign title = block.settings.blog_title | default: blog.title %}
        {% assign desc = block.settings.desc  %}
        <div class="blog_desc {% if forloop.first == true %} active {% endif %}" data-type="{{ blog.title | replace: ' ', '-' }}">
          {{ desc }}
        </div>
      {% endfor %}

      <div class="blog_desc" data-type="all">
        {{ meta_info.description }}
      </div>
    </div>

    <div class="blog_search_wrap hide--desktop">
      <div class="recipes-search-wrapper">
        <input type="text" class="recipes-search" placeholder="Search our recipes">
        <svg xmlns="http://www.w3.org/2000/svg" width="20.556" height="20.556" viewBox="0 0 20.556 20.556">
          <defs>
            <style>
              #np_search_1594154_000000 {
                fill: #0c0404;
              }
            </style>
          </defs>
          <path id="np_search_1594154_000000"  d="M52.388,51.581a.571.571,0,0,1-.807.807l-6.15-6.15a.325.325,0,0,0-.424-.022s-.094.08-.259.2a7.992,7.992,0,1,1,1.738-1.762c-.143.2-.27.348-.27.348a.323.323,0,0,0,.022.426ZM39.994,46.846a6.852,6.852,0,1,0-6.852-6.852A6.851,6.851,0,0,0,39.994,46.846Z" transform="translate(-31.999 -32)"/>
        </svg>
      </div>
    </div>
    

    <div class="blog_content hide--mobile" data-article-slider>
      {% for block in section.blocks %}
        {% assign blog = blogs[block.settings.blog] %}
        {% assign title = block.settings.blog_title | default: blog.title %}
        {% for article in blog.articles %}
          {% render 'post-cell-custom', handle: blog.title, article: article, blog: blog %}
        {% endfor %}
      {% endfor %}
    </div>

    <div class="blog_content hide--desktop">
      {% for block in section.blocks %}
        {% assign blog = blogs[block.settings.blog] %}
        {% assign title = block.settings.blog_title | default: blog.title %}
        {% for article in blog.articles %}
          {% render 'post-cell-custom-mobile', handle: blog.title, article: article, blog: blog %}
        {% endfor %}
      {% endfor %}
    </div>

    <div class="ingredient_content" data-ingredient-slider>
      {% for name in meta_info.name %}
        <article class="ingredient post-cell post-cell-custom" data-handle="ingerident" data-category="ingerident">
          <a href="javascript:;" data-ingredient="{{ name | replace: ' ', '-' }}">{{ name }}</a>
        </article>
      {% endfor %}
    </div>
    <div class="ingredient_details">
      {% for name in meta_info.name %}
        <div class="detail_item" data-ingredient="{{ meta_info.name[forloop.index0] | replace: ' ', '-' }}">
          <div class="detail_wrapper d-flex">
            <div class="image_wrapper">
              <img src="{{ meta_info.image[forloop.index0] }}">
            </div>
            <div class="text_wrapper">
              <div class="ingredient_name">{{ name }}</div>
              <div class="ingredient_desc">{{ meta_info.content[forloop.index0] }}</div>
            </div>
          </div>
        </div>
      {% endfor %}
  </div>
  
</div>


{% endif %}

