{% render 'ea-section-styles' %}

<div class="hero-container">
  <div id="section-{{ section.id }}" class="hero">
      <div class="hero__container container section-banner_main">
          <div class="hero__info-wrap">
              <div class="hero__info {{ section.settings.content_position }} text-align-{{ section.settings.text_align }} mob-text-align-{{ section.settings.text_align_mob }} mobile_{{ section.settings.content_position_mobile }}">
                  {% assign title = section.settings.title %}
                  {% assign subtitle = section.settings.desc %}

                  {% if title != blank %}   
                      <h1 class="hero__title title m-heavy not-animated about-banner_title" style="color: {{ section.settings.text_color }}">{{ title }}</h1>
                  {% endif %}

                  {% if subtitle != blank %}
                      <div class="subtitle not-animated {% if set.subtitle_large %}h3{% endif %}" style="color: {{ section.settings.text_color }}">{{ subtitle }}</div>
                  {% endif %}
              </div>
          </div>   
          {% assign image = section.settings.image %}
          {% assign sp_image = section.settings.sp_image | default: image %}
          <div class="hero__img hide--mobile">
            {% render 'rimage', image: image, size: '2000x' %}
          </div>
          <div class="hero__img hide--desktop">
            {% render 'rimage', image: sp_image, size: '800x' %}
          </div>
      </div> 
  </div> 
</div>

