<div class="sinnept-product-sticky">
  <div class="sticky">
    <ul class="anchors-items">
      {% for i in (1..5) %}
        {% assign title = 'title' | append: forloop.index %}
        {% assign sp_title = 'sp_title' | append: forloop.index %}
        {% assign path = 'url' | append: forloop.index %}
        {% if settings[sp_title] == blank %}
          {% assign sp_title = settings[title]  %}
        {% else %}
          {% assign sp_title = settings[sp_title]  %}
        {% endif %}
        <li class="anchors-item">
          <a href="{% if settings[path] != '#product-tech' %}{{ settings[path] }}{% endif %}" class="product-sticky-bar hide--mobile" {% if settings[path] != '#product-tech' %}data-sticky-bar{{i}}{% endif %}>{{ settings[title] | upcase }}</a>
