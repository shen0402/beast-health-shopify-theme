{% render 'ea-section-styles', section: section %}

<div class="featured-text section-standard" data-section-id="{{ section.id }}" data-section-type="featured-text-section">
  <div class="contain-full-width">
    <div class="wrapper">

      <div class="content full-content align-{{ section.settings.alignment }} rte">
        {% if section.settings.pretitle != blank %}
          <h3 class="pretitle">{{ section.settings.pretitle }}</h3>
        {% endif %}
        {% if section.settings.title != blank %}
          <h1 class="h1 title">{{ section.settings.title | escape }}</h1>
        {% endif %}
        {% if section.settings.text != blank %}
          <div class="richtext">
            {{ section.settings.text }}
          </div>
        {% endif %}
        {% if section.settings.email != blank %}
            <a href="mailto:{{ section.settings.email }}">{{ section.settings.button_text }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</div>
