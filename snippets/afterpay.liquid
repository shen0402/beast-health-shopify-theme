<script type="application/javascript" src="https://static-us.afterpay.com/javascript/present-afterpay.js"></script>
<script>
 let amount = 0, priceSelector = "", locale = 'en_US';
 let afterpayLogoColor = "black"; // ['black', 'white', or 'color']
 let showUpperLimit = false;
 let currentObserver = { activated: false, isDecimalPrice: true };
 // above conditionals - also, add to config
 let hideAfterpay = false;
  
 {%case template.name%} 
    {%when "product"%}
      // In product conditional
      let type = {{product.type | json}};
      if (type === "Gift Card") hideAfterpay = true;
     // amount = {{product.selected_or_first_available_variant.price | json}};
      amount = {{product.price | json}};    
      priceSelector= ".product-add-to-cart[data-afterpay-pre-selector]";
      
      currentObserver = null;
      const apConfig = {
          afterpayLogoColor, priceSelector, locale, amount, showUpperLimit,
         minMaxThreshold:{min: 7500, max: 200000}, giftCard: hideAfterpay, modalContent: "us-white",
          mutationObserver: currentObserver
      };
  
      new presentAfterpay(apConfig).init();
  {%endcase%}
</script>
